<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#F34A8716"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/frag"
            android:name="com.android.myappproject.fragment.BarFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/give_icon"
        android:gravity="left"
        android:text="  레벨 추천"
        android:textSize="35dp" />

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#918E8E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="500dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/paper_icon"
            android:gravity="center_horizontal|top"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/btn_lv_num"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_rect"
                android:backgroundTint="#FFC107"
                android:textColor="#000000"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="레벨을 추천 드립니다.\n홈으로 돌아가서 레벨에 맞는\n체크 리스트를 이용해보세요!"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_rect"
                android:backgroundTint="#284308"
                android:padding="20dp"
                android:text="안심 서비스 홈으로\n돌아가기"
                android:textColor="#fff"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>