<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#F34A8716"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/frag"
            android:name="com.android.myappproject.fragment.BarFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="[레벨 선택하기]"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_select"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_rect"
            android:backgroundTint="#538716"
            android:drawableLeft="@drawable/level_icon_1"
            android:elevation="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Level 1 : Easy\n한 번의 간단한 확인만으로도\n안심할 수 있는 단계"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_lv2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_rect"
            android:backgroundTint="#33570A"
            android:drawableLeft="@drawable/level_icon_2"
            android:elevation="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Level 2 : Normal\n세부 항목 확인으로\n안심할 수 있는 단계"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_lv3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_rect"
            android:backgroundTint="#1C2E07"
            android:drawableLeft="@drawable/level_icon_3"
            android:elevation="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Level 3 : Hard\n세부 항목에 대한 확실한 확인으로\n안심할 수 있는 단계"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>